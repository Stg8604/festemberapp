<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".fragments.SignUpFragment">
    <!-- Auto layout, variables, and unit scale are not yet supported -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signupfront"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle_1"
        android:paddingBottom="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <TextView
            android:id="@+id/sign_up"
            android:layout_width="133.26dp"
            android:layout_height="31.82dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="-21sp"
            android:text="@string/sign_up"
            android:textAppearance="@style/sign_up"
            android:textSize="23.43sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="32.32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/kawashiro_gothic"
            android:hint="Username"
            android:paddingLeft="42dp"
            android:textAppearance="@style/username"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/black"
            android:textSize="11.93sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_up" />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="32.32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/kawashiro_gothic"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="42.27dp"
            android:textAppearance="@style/username"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/black"
            android:textSize="11.93sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />


        <EditText
            android:id="@+id/ephno"
            android:layout_width="0dp"
            android:layout_height="32.32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/kawashiro_gothic"
            android:hint="Phone no."
            android:inputType="number"
            android:paddingLeft="42.27dp"
            android:textAppearance="@style/username"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/black"
            android:textSize="11.93sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="32.32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/kawashiro_gothic"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:paddingLeft="42.27dp"
            android:textAppearance="@style/username"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/black"
            android:textSize="11.93sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ephno" />

        <ImageView
            android:id="@+id/backred3"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btnlogin"
            app:layout_constraintEnd_toEndOf="@+id/login"
            app:layout_constraintStart_toStartOf="@+id/login"
            app:layout_constraintTop_toTopOf="@+id/login" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="98.95dp"
            android:layout_height="27.35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_field"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="Log In"
            android:textAppearance="@style/log_in"
            android:textSize="14.51sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="108.4dp"
            android:layout_height="28.84dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/frame_11"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="Next"
            android:textAppearance="@style/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/did_you_kno"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|top"
            android:text="Did you know?"
            android:textAppearance="@style/did_you_kno"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/next"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signupback"
        android:layout_width="0dp"
        android:layout_height="359dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle_1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/did_you_kno_back"
            android:layout_width="114dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|top"
            android:text="DID YOU KNOW"
            android:textAppearance="@style/did_you_kno"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrow_3"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/arrow_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="109dp"
            android:background="@drawable/ellipse68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ponytail"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/ponytail"
            app:layout_constraintEnd_toEndOf="@+id/ellipse"
            app:layout_constraintStart_toStartOf="@+id/samurai"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/samurai"
            android:layout_width="150dp"
            android:layout_height="168dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:background="@drawable/samuraiyes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fact_about_"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|top"
            android:text="Tamahagane Steel\n
Traditional katanas are forged from Tamahagane steel, which is smelted from iron sand found in specific regions of Japan."
            android:textColor="@color/cardview_dark_background"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sign_up" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <include
            android:id="@+id/topBarBinding"
            layout="@layout/top_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/navBarButtonBinding"
            layout="@layout/nav_bar_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
