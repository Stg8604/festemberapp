<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_list_holder"
    android:layout_width="230dp"
    android:layout_height="122dp"
    android:layout_marginBottom="29dp"
    android:background="@drawable/schedule_list_item_bg">

    <View
        android:id="@+id/colorChanging_BG"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/kanji_1_1"
        android:layout_width="82.48dp"
        android:layout_height="82.48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146.58dp"
        android:background="@drawable/kanji_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19.51dp"
        android:layout_marginTop="6.69dp"
        android:fontFamily="@font/osake"
        android:gravity="top"
        android:textAppearance="@style/event_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_Time_item"
        android:layout_width="90.29dp"
        android:layout_height="25.64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21.74dp"
        android:fontFamily="@font/kawashiro_gothic"
        android:gravity="top"
        android:textAppearance="@style/pm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_name_item"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112.02dp"
        android:fontFamily="@font/kawashiro_gothic"
        android:gravity="end"
        android:textAppearance="@style/event_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/venue_item"
        android:layout_width="90.29dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21.74dp"
        android:fontFamily="@font/kawashiro_gothic"
        android:gravity="top"
        android:textAppearance="@style/venue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_Time_item" />
</androidx.constraintlayout.widget.ConstraintLayout>