<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".fragments.SignUp2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="371dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangle2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sign2_up"
            android:layout_width="0dp"
            android:layout_height="32.89dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="-22sp"
            android:text="@string/sign_up"
            android:textAppearance="@style/sign_up2"
            android:textSize="14.95sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/degree_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="33.15dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="45dp"
            android:hint="degree"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/cardview_dark_background"
            app:counterOverflowTextColor="@android:color/holo_red_light"
            app:endIconTint="@color/cardview_dark_background"
            app:errorIconTint="@android:color/holo_red_light"
            app:errorTextColor="@android:color/holo_red_light"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/cardview_dark_background">

            <AutoCompleteTextView
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_2"
                android:fontFamily="@font/kawashiro_gothic"
                android:hint="Degree"
                android:inputType="textPersonName"
                android:paddingLeft="42dp"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textColorHint="@color/black"
                android:textSize="12.33sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/year_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="33.15dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="45dp"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/cardview_dark_background"
            app:counterOverflowTextColor="@android:color/holo_red_light"
            app:endIconTint="@color/cardview_dark_background"
            app:errorIconTint="@android:color/holo_red_light"
            app:errorTextColor="@android:color/holo_red_light"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/cardview_dark_background">

            <AutoCompleteTextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_2"
                android:fontFamily="@font/kawashiro_gothic"
                android:hint="Year"
                android:inputType="textPersonName"
                android:paddingLeft="42dp"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textColorHint="@color/black"
                android:textSize="12.33sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="33.35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="171.54dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/kawashiro_gothic"
            android:hint="Address"
            android:textAlignment="center"
            android:textAppearance="@style/username"
            android:textColor="@color/cardview_dark_background"
            android:textColorHint="@color/black"
            android:textSize="12.33sp"
            app:boxStrokeColor="@color/cardview_dark_background"
            app:endIconTint="@color/cardview_dark_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/cardview_dark_background" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/college_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="33.15dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="222dp"
            android:layout_marginEnd="45dp"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/cardview_dark_background"
            app:counterOverflowTextColor="@android:color/holo_red_light"
            app:endIconTint="@color/cardview_dark_background"
            app:errorIconTint="@android:color/holo_red_light"
            app:errorTextColor="@android:color/holo_red_light"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/cardview_dark_background">

            <AutoCompleteTextView
                android:id="@+id/college"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_2"
                android:fontFamily="@font/kawashiro_gothic"
                android:hint="College"
                android:inputType="textPersonName"
                android:paddingLeft="42dp"
                android:paddingTop="3dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textColorHint="@color/black"
                android:textSize="12.33sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/backred3"
            android:layout_width="98dp"
            android:layout_height="31dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/btnlogin"
            app:layout_constraintEnd_toEndOf="@+id/back2"
            app:layout_constraintStart_toStartOf="@+id/back2"
            app:layout_constraintTop_toTopOf="@+id/back2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back2"
            android:layout_width="98.95dp"
            android:layout_height="27.35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/text_field"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="Back"
            android:textAppearance="@style/log_in"
            android:textSize="14.51sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/college_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_2"
            android:layout_width="108.4dp"
            android:layout_height="28.84dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="297dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/frame_11"
            android:fontFamily="@font/kawashiro_gothic"
            android:gravity="center_horizontal|center_vertical"
            android:text="Next"
            android:textAppearance="@style/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/TopBar"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <include
            android:id="@+id/topBarBinding"
            layout="@layout/top_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/navBarButtonBinding"
            layout="@layout/nav_bar_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>